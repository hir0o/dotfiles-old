[user]
    name = shibuyahiroyuki
    email = mk.9.q.kyu@gmail.com
[core]
    editor = vim
[color]
    ui = true
[alias]
    ad  = add
    ada = add -A
    st  = status
    rmc =git rm -r --cached .
    br  = branch
    bra = branch -a
    brd = !git branch | peco | xargs git branch -D
    cm  = commit -m
    co = !"git branch --all | tr -d '* ' | grep -v -e '->' | peco | sed -e 's+remotes/[^/]*/++g' | xargs git checkout"
    cob = checkout -b
    cof = !git branch | peco | xargs git checkout
    df  = diff
    dfh = diff HEAD
    dft = difftool
    lg  = log
    lgp = log -p
    lgs = log --stat
    lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cs) %C(bold blue)<%an>%Creset' --abbrev-commit
    mt  = mergetool
    st  = status
    ps  = !git push origin `git rev-parse --abbrev-ref HEAD`
    pl  = !git pull origin `git rev-parse --abbrev-ref HEAD`
    rb  = rebase
    rf  = reflog --date=iso
    rs  = reset
    rsh = reset --hard
    res = git checkout . && git clean -df .
    prd  = pull-request
    prb = pull-request -b
    op = browse
    fpp = ftp push
[color]
    ui = true
    diff = auto
    branch = auto
    status = auto
    showbranch = auto
[color "branch"]
    local = green
    remote = red
    current = green reverse
[color "diff"]
    old = red bold
    new = green bold
    meta = yellow bold
    frag = magenta bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[ghq]
    root = ~/ghq/
