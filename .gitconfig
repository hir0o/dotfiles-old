[core]
	editor = vim
[color]
	ui = true
[alias]
    ad  = add
    ada = add -A
    st = status
    # adf = !git status -s | fzf -m | awk '{print $NF}' | xargs git add
    br  = branch
    bra = branch -a
    brd = !git branch | peco | xargs git branch -D
    cm  = commit -m
    co  = checkout
    cob = checkout -b
    cof = !git branch | peco | xargs git checkout
    df  = diff
    dfh = diff HEAD
    dft = difftool
    lg  = log
    lgp = log -p
    lgs = log --stat
    lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cs) %C(bold blue)<%an>%Creset' --abbrev-commit
    mt  = mergetool
    st  = status
    ps  = !git push origin `git rev-parse --abbrev-ref HEAD`
    pl  = !git pull origin `git rev-parse --abbrev-ref HEAD`
    rb  = rebase
    rf  = reflog --date=iso
    rs  = reset
    rsh = reset --hard
    pr  = pull-request # hub
    prb = pull-request -b # ブランチ指定してPR
[color]
	ui = true
	diff = auto
	branch = auto
	status = auto
        showbranch = auto

[color "branch"]
	local = green
	remote = red
	current = green reverse

[color "diff"]
	old = red bold
	new = green bold
	meta = yellow bold
	frag = magenta bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[ghq]
	root = ~/.ghq/
