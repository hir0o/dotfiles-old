[alias]
  ad  = add
  ada = add -A
  st  = status
  ss  = stash
  rmc = !"git rm -r --cached ."
  br  = branch -av
  brd = !git branch | fzf -m --print0 | tr -d ' ' | xargs -0 git branch -D
  cm  = commit --verbose
  cmm = !"git add -A && git status && git commit -m"
  coa = !"git branch --all | tr -d '* ' | grep -v -e '->' | peco | sed -e 's+remotes/[^/]*/++g' | xargs git checkout"
  co  = !"git branch | tr -d '* ' | grep -v -e '->' | peco | sed -e 's+remotes/[^/]*/++g' | xargs git checkout"
  cob = checkout -b
  cof = !git branch | peco | xargs git checkout
  df  = diff
  dfh = diff HEAD
  dft = difftool
  lg  = log
  lgp = log -p
  lgs = log --stat
  lgg = !git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  mt  = mergetool
  mg  = merge
  st  = status
  ps  = !git push origin `git rev-parse --abbrev-ref HEAD`
  pl  = !git pull origin `git rev-parse --abbrev-ref HEAD`
  psh = push heroku master
  rb  = rebase
  rf  = reflog --date=iso
  rs  = reset
  rsh = reset --hard
  cre = !gh repo create
  cpr = !gh pr create -B $(git branch | fzf)
  op  = !gh repo view --web
  opg = !gh repo view `ghq list | fzf | cut -d "/" -f 2,3` --web
  opi = !gh issue view `gh issue list | fzf | cut -f 1` --web
  opp = !gh pr view `gh pr list | fzf` --web
  fps = ftp push
  g   = !ghq get
  rmg = !rm -rf `ghq list -p | fzf`
  fst = fuzzy status
  fbr = fuzzy branch
  flg = fuzzy log
  fss = fuzzy stash
  fh = fetch

[core]
  editor = nvim
  pager = delta

[color]
  ui = true

[color]
  ui = true
  diff = auto
  branch = auto
  status = auto
  showbranch = auto

[color "branch"]
  local = green
  remote = red
  current = green reverse

[color "diff"]
  old = red bold
  new = green bold
  meta = yellow bold
  frag = magenta bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[commit]
  # gpgsign = true
  template = ~/.commi_template

[delta] # https://github.com/dandavison/delta
  line-numbers = true
  hunk-header-style = omit
  file-style = "#338ECF" ul
  file-decoration-style = none
  syntax-theme = Monokai Extended
  whitespace-error-style = 22 reverse
  line-numbers-left-style = "#3D424D"
  line-numbers-right-style = "#3D424D"
  side-by-side = true

[interactive]
  diffFilter = delta --color-only

[ghq]
  root = ~/ghq/

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
