{
  // ========== Theme ==========
  "workbench.iconTheme": "material-icon-theme", // icon テーマ
  // "material-icon-theme.folders.color": "#224249",
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.saturation": 0.6,
  "editor.semanticTokenColorCustomizations": null,
  "workbench.colorTheme": "One Dark Pro",
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "\"HackGen35Nerd Console\"",
  "editor.cursorBlinking": "solid", // [blink, smooth, solid, expand]  // カーソル の点滅

  // ========== Emmet ==========
  "emmet.excludeLanguages": ["markdown"], // emmetを適用しない
  "emmet.includeLanguages": {
    // emmetを適用する
    "php": "html",
    "erb": "html",
    "scss": "css",
    "javascript": "javascriptreact"
  },

  // ========== Formatter ==========
  "editor.codeActionsOnSave": {
    "source.organizeImports": true, // importを自動で追加
    "source.fixAll.eslint": true, // ファイル保存時にESLintでフォーマット
    "source.fixAll.stylelint": true // ファイル保存時にstylelintでフォーマット
  },
  "eslint.packageManager": "yarn",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.validate": [
    // eslint適応するやつ
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "vue"
  ],
  "eslint.autoFixOnSave": true,

  // Prateter
  "prettier.eslintIntegration": true, // ファイル保存時にPrettierでフォーマット
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Common
  "editor.formatOnSave": true,
  // "files.autoSave": "off",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 100,

  // Specific
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true
  },

  // ========== LiveSassCompile ==========Li
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/css/"
    }
  ],

  // ========== Vim ==========
  // ノーマルモード
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<C-d>"], "after": ["g", "b"] } // マルチカーソル,
    // { "before": []}
  ],
  // "vim.leader": "<space>",
  // インサートモード
  "vim.insertModeKeyBindings": [{ "before": ["j", "j"], "after": ["<Esc>"] }],

  // 補完
  "editor.acceptSuggestionOnEnter": "on", // エンターで補完しない
  "editor.detectIndentation": true, // editor.tabSizeを開いてるファイルに合わせる
  "editor.quickSuggestions": {
    // 補完候補を出す場所
    "other": true,
    "strings": true,
    "comments": true
  },
  "editor.formatOnPaste": true, // ペーストしたテキストをフォーマットする
  "editor.formatOnType": true, // 入力したテキストをフォーマットする
  "editor.insertSpaces": true, // インデントをスペースにする
  "editor.linkedEditing": true, // 閉じタグを自動で編集する
  "editor.matchBrackets": true, // 対応するカッコを強調する
  "editor.minimap.enabled": false, // ミニマップの表示
  "explorer.confirmDelete": false, // ファイルを削除するときに確認する
  "explorer.confirmDragAndDrop": false, // ファイルを移動するときに確認する
  "explorer.compactFolders": false, // フォルダ階層をまとめない
  "files.insertFinalNewline": false, // 末尾に改行を自動で入れる
  "files.trimFinalNewlines": true, // 末尾の改行を削除する
  "files.trimTrailingWhitespace": true, // 末尾の空白を削除する
  "terminal.integrated.cursorStyle": "line", // ターミナルのカーソル
  "editor.cursorStyle": "line", // エディタのカーソル
  "editor.lineNumbers": "on", // 行数の表示
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?", // ダブルクリックで選択して欲しくない文字
  "editor.wordWrap": "on", // 文字の折り返し
  "editor.tabSize": 2, // タブサイズ
  "github.copilot.enable": {
    "*": false,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "typescriptreact": true
  },

  // Suggest
  "editor.suggestSelection": "recentlyUsed", // サジェストのどの位置から選択するか。
  "editor.snippetSuggestions": "top", // ユーザースニペットを上に持ってくる
  "editor.tabCompletion": "on", // Tabでスニペットを挿入するかどうか
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoGuessEncoding": true // オートエンコード

  // src: https://atmarkit.itmedia.co.jp/ait/articles/1708/23/news026.html
}
